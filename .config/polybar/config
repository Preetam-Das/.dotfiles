# Modules

[module/bspwm]
type = internal/bspwm 

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-foreground = ${xrdb:color0}
label-occupied = %icon%
label-empty = %icon%
label-occupied-underline = ${xrdb:color5}

label-separator = .

# padding
label-focused-padding = 1
#label-empty-padding = 1
#label-occupied-padding = 1
#label-urgent-padding = 1

# colors
label-focused-background = ${colors.background-alt}

# icons
ws-icon-0 = I;I 
ws-icon-1 = II;II
ws-icon-2 = III;III
ws-icon-3 = IV;IV
ws-icon-4 = V;V
ws-icon-5 = VI;VI
ws-icon-6 = VII;VII
ws-icon-7 = VIII;VIII
ws-icon-8 = IX;IX
ws-icon-9 = X;X

[module/date]
type = internal/date
interval = 1

date = %a, %b%e %I:%M %p
;time-alt = %I:%M %p

format-prefix-foreground = ${colors.foreground-alt}
label = %date% %time%

format-underline = ${xrdb:color1}
click-left = alacritty -e cal

[module/xwindow]
type = internal/xwindow

label = %title:0:20:...%
format = <label>
format-font = 1
format-padding = 1
format-underline = ${xrdb:color3}

