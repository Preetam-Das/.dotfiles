#!/usr/bin/bash

fullFileName="$1"
ext="${fullFileName##*.}"
fileName="${fullFileName%.*}"

#echo $fullFileName
#echo $fileName
#echo $ext

[[ ! -f $fullFileName ]] && echo "$fullFileName: No such file" && exit 1

if [ $ext == 'c' ]; then
	gcc "$@" -o $fileName
	./$fileName

elif [ $ext == 'cpp' ]; then
	g++ "$@" -o $fileName
	./$fileName

elif [ $ext == 'py' ]; then
	python $fullFileName

elif [ $ext == 'java' ]; then
	javac $fullFileName
	java $fileName

elif [ $ext == 'vhdl' ]; then
	mkdir -p work
	opt="--workdir=work -fsynopsys"
	ghdl -s $opt $fullFileName
	ghdl -a $opt $fullFileName
	ghdl -e $opt $fileName
	if [[ "$@" == *"--vcd"* ]]; then
		ghdl -r $opt $fileName --vcd="$fileName.vcd"
	else 
		ghdl -r $opt $fileName
	fi
fi

exit 0
